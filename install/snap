name="snap"
arg="install"
install="$name $arg"

packages=(
    chromium
    "vscode --classic"
    "pycharm-community --classic"
    spotify
    vlc
)

if test ! $(which $name)
then
    echo "Installing a stable version of $name..."
    sudo apt install snapd
fi

for package in "${packages[@]}"
do
   $install $package
done